# loc-mVR Environment Variables Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Configuration
# =============================================================================

# OpenAI API Key for translation and QA
LOCMVR_OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Custom API base URL for OpenAI-compatible APIs
# LOCMVR_OPENAI_BASE_URL=https://api.openai.com/v1

# Optional: Azure OpenAI configuration
# LOCMVR_AZURE_OPENAI_KEY=your-azure-key
# LOCMVR_AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# LOCMVR_AZURE_OPENAI_VERSION=2024-02-01

# =============================================================================
# Database Configuration (Optional)
# =============================================================================

# SQLite database path (default: ./data/locmvr.db)
# LOCMVR_DB_PATH=./data/locmvr.db

# PostgreSQL configuration (if using PostgreSQL backend)
# LOCMVR_PG_HOST=localhost
# LOCMVR_PG_PORT=5432
# LOCMVR_PG_DATABASE=locmvr
# LOCMVR_PG_USER=locmvr
# LOCMVR_PG_PASSWORD=your-password

# =============================================================================
# Workflow Configuration
# =============================================================================

# Default workflow to use (default: default)
# LOCMVR_DEFAULT_WORKFLOW=default

# Maximum parallel translation tasks (default: 4)
# LOCMVR_MAX_PARALLEL=4

# Request timeout in seconds (default: 300)
# LOCMVR_TIMEOUT=300

# Enable retry on failure (default: true)
# LOCMVR_ENABLE_RETRY=true

# Maximum retry attempts (default: 3)
# LOCMVR_MAX_RETRIES=3

# =============================================================================
# Output Configuration
# =============================================================================

# Output directory for results (default: ./output)
# LOCMVR_OUTPUT_DIR=./output

# Default output format: csv, json, xlsx (default: csv)
# LOCMVR_OUTPUT_FORMAT=csv

# Include confidence scores in output (default: true)
# LOCMVR_INCLUDE_CONFIDENCE=true

# Include QA scores in output (default: true)
# LOCMVR_INCLUDE_QA_SCORES=true

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
# LOCMVR_LOG_LEVEL=INFO

# Log file path (default: ./logs/locmvr.log)
# LOCMVR_LOG_FILE=./logs/locmvr.log

# Enable console output (default: true)
# LOCMVR_LOG_CONSOLE=true

# =============================================================================
# Cache Configuration
# =============================================================================

# Enable response caching (default: true)
# LOCMVR_CACHE_ENABLED=true

# Cache directory (default: ./cache)
# LOCMVR_CACHE_DIR=./cache

# Cache TTL in seconds (default: 86400 = 24 hours)
# LOCMVR_CACHE_TTL=86400

# =============================================================================
# Advanced Configuration
# =============================================================================

# Custom prompt templates directory
# LOCMVR_PROMPTS_DIR=./config/prompts

# Custom QA rules directory
# LOCMVR_QA_RULES_DIR=./config/qa_rules

# Enable experimental features (default: false)
# LOCMVR_EXPERIMENTAL=false

# =============================================================================
# Development/Debug Configuration
# =============================================================================

# Enable debug mode (default: false)
# LOCMVR_DEBUG=false

# Enable mock mode for testing without API calls (default: false)
# LOCMVR_MOCK_MODE=false

# Mock response delay in milliseconds (default: 100)
# LOCMVR_MOCK_DELAY=100
